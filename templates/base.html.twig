<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link href="{{ asset('style.css') }}" type="text/css" rel="stylesheet"/>
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
<div class="wrapper">
    {% block body %}
        <div class="content-wrapper">
            {% block heading %}
            {% endblock %}

            {% block messages %}
                {% include 'messages.html.twig' %}
            {% endblock %}

            {% block content %}
            {% endblock %}
        </div>

        {% if user is defined %}
            <div class="sidebar-wrapper">
                <div class="sidebar">
                    {% block sidebar %}
                        {% block leaderboard %}
                            {{ board.render(user)|raw }}
                        {% endblock %}
                    {% endblock %}
                </div>
            </div>
        {% endif %}
    {% endblock %}
</div>
</body>
</html>
